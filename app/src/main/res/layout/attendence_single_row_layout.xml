<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/studentUsnInformation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e3e5e8">

    <TextView
        android:id="@+id/usnStudentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="14dp"
        android:text="@string/textview"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameStudentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/emailStudentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usnStudentValue"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/phoneStudentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/usnStudentValue"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/phoneParentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/textview" />
</RelativeLayout>