<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.pradyotprakash.attendance">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TypeSelection"
            android:theme="@style/AppTheme.CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminActivity"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".TeacherActivity"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".StudentActivity"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".AdminControl"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".CreateTeacherAccount"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".TeacherControl"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".AddDetails"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".AddStudentDetails"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".AttendenceActivity"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".AttendenceCalculation"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".StudentInformation"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".ShowChangeStats"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".ChangeAbsentToPresent"
            android:theme="@style/AppTheme.CustomTheme" />
    </application>

</manifest>